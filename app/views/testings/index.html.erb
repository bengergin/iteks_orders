<% content_for :title do %>Sizes<% end %>
<p class="controls">
  <a href="/testings/new">Add new testing</a>
</p>
<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
  <% @testings.each do |testing| %>
  <tr id="<%= testing.id %>" class="<%= cycle("odd", "even") %>">
    <td><%= testing.name %></td>
  </tr>
  <% end %>
  </tbody>
</table>

<p class="stats"><%= number_with_delimiter(@testings.length) %> Testings</p>

<script type="text/javascript" src="/javascripts/jquery-<%= JQUERY_VERSION %>.min.js"></script>
<script type="text/javascript" src="/javascripts/jquery.tablesorter.min.js"></script>
<script type="text/javascript">
$('table').tablesorter({
  sortList: [[0,0]],
  widgets: ['zebra']
});
$('button').click(function() {
  $(this).find('a:first').click();
});
$('tbody tr').click(function() {
  $('tr').removeClass('selected');
  $(this).addClass('selected');
})
$('tbody tr').dblclick(function() {
  window.location = '/testings/' + $(this).attr('id') + '/edit';
});
</script>